<h1>edit {{people.title}}</h1>

<form action="/users/{{userId}}/people/{{personId}}?_method=PUT" method="POST">
    <div>
        <label for="title">Event</label>
        <input type="text" name="title" value={{event.title}}>
    </div>
    <div>
        <label for="date">Date</label>
        <input type="date" name="date">
    </div>
    <div>
        <label for="with">with:</label>
        <input type="text" name="with" value={{event.with}}>
    </div>
    <div>
        <label for="address">address:</label>
        <input type="text" name="address" value={{event.address}}>
    </div>
    <div>
        <label for="miscellaneous">misc</label>
        <textarea type="text" name="miscellaneous" value={{event.miscellaneous}}></textarea>
    </div>
    <div>
        <label for="ready">ready?</label>
        <input type="text" name="ready" value={{event.ready}}>
    </div>
    <button type="submit">save event</button>
</form>